rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Additional security: file size limits
    match /users/{userId}/originals/{fileName} {
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    match /users/{userId}/translated/{fileName} {
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    match /users/{userId}/batch/{fileName} {
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 100 * 1024 * 1024; // 100MB limit for ZIP files
    }
  }
}
